---
import { useTranslations } from '../../i18n/useTranslations';
import LanguageSelector from '../ui/LanguageSelector.astro';
import ThemeToggle from '../ui/ThemeToggle.astro';

const { lang = 'pt-br' } = Astro.params;
const t = useTranslations(lang);

// URLs com o idioma atual
const localizedUrl = (path) => lang === 'pt-br' ? path : `/${lang}${path}`;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-light-surface/80 dark:bg-dark-surface/80 backdrop-blur-md border-b border-light-text-secondary/10 dark:border-dark-text-secondary/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo e Nome -->
      <div class="flex-shrink-0 flex items-center">
        <a href={localizedUrl('/')} class="flex items-center space-x-2">
          <img class="h-8 w-8" src="/logo.svg" alt="Pregunta Logo" />
          <span class="text-xl font-bold text-light-text-primary dark:text-dark-text-primary">Pregunta</span>
        </a>
      </div>

      <!-- Navegação Principal - Desktop -->
      <nav class="hidden md:flex items-center space-x-4">
        <a 
          href={localizedUrl('/play')}
          class="px-3 py-2 rounded-md text-sm font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-primary-hover transition-all"
        >
          {t('nav.play')}
        </a>
        <a 
          href={localizedUrl('/categories')}
          class="px-3 py-2 rounded-md text-sm font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-primary-hover transition-all"
        >
          {t('nav.categories')}
        </a>
        <a 
          href={localizedUrl('/ranking')}
          class="px-3 py-2 rounded-md text-sm font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-primary-hover transition-all"
        >
          {t('nav.ranking')}
        </a>
      </nav>

      <!-- Ações do Usuário -->
      <div class="flex items-center space-x-4">
        <!-- Language Selector -->
        <div class="hidden sm:block">
          <LanguageSelector />
        </div>

        <!-- Theme Toggle -->
        <ThemeToggle />

        <!-- Botões de Login/Registro -->
        <div class="hidden md:flex items-center space-x-2">
          <a
            href={localizedUrl('/login')}
            class="px-4 py-2 text-sm font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-text-accent transition-colors"
          >
            {t('nav.login')}
          </a>
          <a
            href={localizedUrl('/register')}
            class="px-4 py-2 text-sm font-medium text-light-text-primary bg-light-primary hover:bg-light-primary/90 dark:bg-dark-primary dark:text-dark-text-primary dark:hover:bg-dark-primary/90 rounded-md transition-colors"
          >
            {t('nav.register')}
          </a>
        </div>

        <!-- Menu Mobile -->
        <button
          type="button"
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-light-text-secondary hover:text-light-text-primary hover:bg-light-background dark:text-dark-text-secondary dark:hover:text-dark-text-primary dark:hover:bg-dark-background transition-colors"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <span class="sr-only">Abrir menu principal</span>
          <!-- Icon when menu is closed -->
          <svg
            class="block h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a
        href={localizedUrl('/play')}
        class="block px-3 py-2 rounded-md text-base font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-text-accent transition-colors"
      >
        {t('nav.play')}
      </a>
      <a
        href={localizedUrl('/categories')}
        class="block px-3 py-2 rounded-md text-base font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-text-accent transition-colors"
      >
        {t('nav.categories')}
      </a>
      <a
        href={localizedUrl('/ranking')}
        class="block px-3 py-2 rounded-md text-base font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-text-accent transition-colors"
      >
        {t('nav.ranking')}
      </a>
      <a
        href={localizedUrl('/login')}
        class="block px-3 py-2 rounded-md text-base font-medium text-light-text-primary hover:text-light-text-accent dark:text-dark-text-primary dark:hover:text-dark-text-accent transition-colors"
      >
        {t('nav.login')}
      </a>
      <a
        href={localizedUrl('/register')}
        class="block px-3 py-2 rounded-md text-base font-medium text-light-text-primary bg-light-primary hover:bg-light-primary/90 dark:bg-dark-primary dark:text-dark-text-primary dark:hover:bg-dark-primary/90 transition-colors"
      >
        {t('nav.register')}
      </a>
    </div>
  </div>
</header>

<script>
  // Toggle menu mobile
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    const expanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', (!expanded).toString());
    mobileMenu?.classList.toggle('hidden');
  });
</script>
