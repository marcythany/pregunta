---
import { getLanguageFromURL, useTranslations } from '../../i18n/utils';

const lang = getLanguageFromURL(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="w-full py-6 mt-12 bg-light-surface dark:bg-dark-surface border-t border-gray-200 dark:border-gray-700">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="text-sm text-gray-600 dark:text-gray-400">
        Â© {currentYear} Pregunta. {t('footer.rights')}
      </div>
      
      <div class="flex gap-6">
        <a href={`/${lang}/about`} class="text-sm hover:text-light-primary dark:hover:text-dark-primary">
          {t('footer.about')}
        </a>
        <a href={`/${lang}/privacy`} class="text-sm hover:text-light-primary dark:hover:text-dark-primary">
          {t('footer.privacy')}
        </a>
        <a href={`/${lang}/terms`} class="text-sm hover:text-light-primary dark:hover:text-dark-primary">
          {t('footer.terms')}
        </a>
      </div>
    </div>
  </div>
</footer>
