---
import Layout from '../../../layouts/Layout.astro';
import { UserMenu } from '../../../components/ui/UserMenu';

---

<Layout title="Nova Pergunta - Pregunta">
  <main class="container mx-auto px-4 py-8">
    <header class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Nova Pergunta</h1>
      <UserMenu client:load />
    </header>

    <form id="questionForm" class="max-w-3xl mx-auto space-y-6">
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700">
          Título
        </label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
          placeholder="Digite um título claro e específico"
        />
      </div>

      <div>
        <label for="content" class="block text-sm font-medium text-gray-700">
          Conteúdo
        </label>
        <textarea
          id="content"
          name="content"
          rows="8"
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
          placeholder="Descreva sua pergunta em detalhes..."
        ></textarea>
      </div>

      <div>
        <label for="category" class="block text-sm font-medium text-gray-700">
          Categoria
        </label>
        <select
          id="category"
          name="category"
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
        >
          <option value="">Selecione uma categoria</option>
          <option value="tecnologia">Tecnologia</option>
          <option value="ciencia">Ciência</option>
          <option value="historia">História</option>
          <option value="geografia">Geografia</option>
          <option value="artes">Artes</option>
          <option value="esportes">Esportes</option>
          <option value="entretenimento">Entretenimento</option>
          <option value="outros">Outros</option>
        </select>
      </div>

      <div>
        <label for="tags" class="block text-sm font-medium text-gray-700">
          Tags
        </label>
        <input
          type="text"
          id="tags"
          name="tags"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
          placeholder="Separe as tags por vírgula (ex: javascript, programação, web)"
        />
      </div>

      <div class="flex justify-end space-x-4">
        <a
          href="/pt-br"
          class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Cancelar
        </a>
        <button
          type="submit"
          class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Publicar Pergunta
        </button>
      </div>
    </form>
  </main>
</Layout>

<script>
  import { userStore } from '../../../stores/authStore';

  // Verificar permissões antes de permitir o envio
  const form = document.querySelector('#questionForm');
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Verificar se o usuário está autenticado
    if (!userStore.get().isAuthenticated) {
      alert('Você precisa estar logado para criar uma pergunta.');
      return;
    }

    // Verificar se o usuário tem pontos suficientes
    if (userStore.get().points < 10) {
      alert('Você precisa ter pelo menos 10 pontos para criar uma pergunta.');
      return;
    }

    try {
      const formData = new FormData(form);
      const tagsInput = formData.get('tags');
      const tags = tagsInput ? tagsInput.toString().split(',').map(tag => tag.trim()).filter(Boolean) : [];

      const response = await fetch('/api/questions', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('token')}`
        },
        body: JSON.stringify({
          title: formData.get('title'),
          content: formData.get('content'),
          category: formData.get('category'),
          tags
        })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.message || 'Erro ao criar pergunta');
      }

      window.location.href = '/pt-br';
    } catch (err) {
      alert(err.message || 'Erro ao criar pergunta');
    }
  });
</script>
