---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="Pregunta - Jogo de Trivia">
  <!-- Hero Section -->
  <section class="relative h-[500px] w-full bg-gradient-to-br from-slate-800 to-slate-900 dark:from-gray-900 dark:to-gray-950 flex items-center justify-center">
    <div class="text-center space-y-6">
      <h1 class="text-5xl font-bold text-white">Mergulhe na Diversão</h1>
      <p class="text-xl text-gray-300">Teste seu conhecimento e compita com jogadores do mundo todo</p>
      <button class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
        Jogar Agora
      </button>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Categorias</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {[
        { name: 'Praia', image: 'https://picsum.photos/seed/beach/400/300' },
        { name: 'Montanha', image: 'https://picsum.photos/seed/mountain/400/300' },
        { name: 'Cidade', image: 'https://picsum.photos/seed/city/400/300' },
        { name: 'Floresta', image: 'https://picsum.photos/seed/forest/400/300' },
        { name: 'Festival de Música', image: 'https://picsum.photos/seed/music/400/300' },
        { name: 'Tour Histórico', image: 'https://picsum.photos/seed/history/400/300' },
        { name: 'Mercado Local', image: 'https://picsum.photos/seed/market/400/300' },
        { name: 'Lago', image: 'https://picsum.photos/seed/lake/400/300' }
      ].map((category) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition cursor-pointer">
          <img 
            src={category.image} 
            alt={category.name}
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <div class="p-4">
            <h3 class="font-semibold text-lg text-gray-900 dark:text-white">{category.name}</h3>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Top Players Section -->
  <section class="py-16 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Top 10 Jogadores</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Left Column -->
      <div class="space-y-4">
        {[
          { name: 'Alexandre J.', username: '@estrela', score: 9500, avatar: 'https://picsum.photos/seed/alex/64/64' },
          { name: 'Júlia L.', username: '@progamer', score: 9400, avatar: 'https://picsum.photos/seed/julia/64/64' },
          { name: 'Samuel T.', username: '@recordista', score: 9300, avatar: 'https://picsum.photos/seed/samuel/64/64' },
          { name: 'Carlos M.', username: '@campeao', score: 9200, avatar: 'https://picsum.photos/seed/carlos/64/64' },
          { name: 'Pedro K.', username: '@reidatrivia', score: 9100, avatar: 'https://picsum.photos/seed/pedro/64/64' },
        ].map((player, index) => (
          <div class="flex items-center justify-between bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
            <div class="flex items-center space-x-4">
              <span class="text-xl font-bold text-gray-500 dark:text-gray-400">#{index + 1}</span>
              <img 
                src={player.avatar} 
                alt={`Avatar de ${player.name}`}
                class="w-12 h-12 rounded-full"
                loading="lazy"
              />
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{player.name}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{player.username}</p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900 dark:text-white">{player.score}</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">Melhor Pontuação</p>
            </div>
          </div>
        ))}
      </div>
      <!-- Right Column -->
      <div class="space-y-4">
        {[
          { name: 'João B.', username: '@mestre', score: 9000, avatar: 'https://picsum.photos/seed/joao/64/64' },
          { name: 'Thais R.', username: '@genio', score: 8900, avatar: 'https://picsum.photos/seed/thais/64/64' },
          { name: 'Marina P.', username: '@craque', score: 8800, avatar: 'https://picsum.photos/seed/marina/64/64' },
          { name: 'Diego D.', username: '@expert', score: 8700, avatar: 'https://picsum.photos/seed/diego/64/64' },
          { name: 'Rafael F.', username: '@cerebro', score: 8600, avatar: 'https://picsum.photos/seed/rafael/64/64' },
        ].map((player, index) => (
          <div class="flex items-center justify-between bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
            <div class="flex items-center space-x-4">
              <span class="text-xl font-bold text-gray-500 dark:text-gray-400">#{index + 6}</span>
              <img 
                src={player.avatar} 
                alt={`Avatar de ${player.name}`}
                class="w-12 h-12 rounded-full"
                loading="lazy"
              />
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{player.name}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{player.username}</p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900 dark:text-white">{player.score}</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">Melhor Pontuação</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
