---
import Layout from '../../layouts/Layout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

const aboutURL = getRelativeLocaleUrl('pt-br', 'about');
const playURL = getRelativeLocaleUrl('pt-br', 'play');
---

<Layout title="Pregunta - Jogo de Perguntas e Respostas" description="Um jogo de perguntas e respostas moderno e interativo">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Bem-vindo ao Pregunta!</h1>
    <div class="flex flex-col items-center gap-4">
      <a href={playURL} class="btn btn-primary">Jogar Agora</a>
      <a href={aboutURL} class="btn btn-secondary">Sobre o Jogo</a>
    </div>
  </main>
</Layout>
