---
import Layout from '../../layouts/Layout.astro';
import AuthForm from '../../components/features/auth/AuthForm';
---

<Layout title="Login - Pregunta">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-light-background dark:bg-dark-background">
    <div class="w-full max-w-md space-y-8 bg-light-surface dark:bg-dark-surface p-8 rounded-lg shadow-md">
      <AuthForm mode="login" client:load />
      
      <p class="mt-4 text-center text-sm text-light-text-secondary dark:text-dark-text-secondary">
        NÃ£o tem uma conta?{' '}
        <a 
          href="/register" 
          class="font-medium text-light-primary dark:text-dark-primary hover:text-light-primary/80 dark:hover:text-dark-primary/80"
        >
          Registre-se
        </a>
      </p>
    </div>
  </div>
</Layout>
