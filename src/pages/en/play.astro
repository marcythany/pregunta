---
import Layout from '../../layouts/Layout.astro';
import CategoryCard from '../../components/categories/CategoryCard.astro';

const categories = [
  { title: 'History', imageUrl: 'https://picsum.photos/id/1000/300/200' },
  { title: 'Geography', imageUrl: 'https://picsum.photos/id/1015/300/200' },
  { title: 'Science', imageUrl: 'https://picsum.photos/id/1043/300/200' },
  { title: 'Arts', imageUrl: 'https://picsum.photos/id/1082/300/200' },
  { title: 'Sports', imageUrl: 'https://picsum.photos/id/1033/300/200' },
  { title: 'Entertainment', imageUrl: 'https://picsum.photos/id/1061/300/200' },
  { title: 'Technology', imageUrl: 'https://picsum.photos/id/1018/300/200' },
  { title: 'Literature', imageUrl: 'https://picsum.photos/id/292/300/200' },
];

const recentGames = [
  {
    id: 1,
    title: 'World History Quiz',
    players: 4,
    difficulty: 'Medium',
    status: 'In Progress',
  },
  {
    id: 2,
    title: 'Geography Challenge',
    players: 3,
    difficulty: 'Easy',
    status: 'Waiting for players',
  },
  {
    id: 3,
    title: 'Science Trivia',
    players: 6,
    difficulty: 'Hard',
    status: 'In Progress',
  },
];
---

<Layout title="Pregunta - Play" description="Choose a category and start playing">
  <div class="container mx-auto px-4 py-8">
    <!-- Quick Play Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-accent-orange via-accent-purple to-accent-pink rounded-2xl p-8 text-white">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-display font-bold mb-4">Quick Match</h2>
          <p class="text-lg mb-8 opacity-90">
            Join a random match and start playing immediately!
          </p>
          <button class="bg-white text-accent-orange hover:bg-gray-100 px-8 py-4 rounded-full font-semibold shadow-soft hover:shadow-soft-lg transform hover:-translate-y-0.5 transition-all duration-200">
            Play Now
          </button>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="mb-12">
      <h2 class="text-3xl font-display font-bold mb-2 text-gray-900 dark:text-white">Categories</h2>
      <p class="text-gray-600 dark:text-gray-300 mb-8">Choose a category to play</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {categories.map(category => (
          <CategoryCard {...category} />
        ))}
      </div>
    </section>

    <!-- Active Games Section -->
    <section>
      <h2 class="text-3xl font-display font-bold mb-2 text-gray-900 dark:text-white">Active Games</h2>
      <p class="text-gray-600 dark:text-gray-300 mb-8">Join an ongoing game</p>
      <div class="grid gap-4">
        {recentGames.map(game => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-soft p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{game.title}</h3>
                <div class="flex items-center mt-2 space-x-4">
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    {game.players} players
                  </span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    {game.difficulty}
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100">
                    {game.status}
                  </span>
                </div>
              </div>
              <button class="px-6 py-2 bg-accent-orange hover:bg-accent-orange/90 text-white rounded-full font-medium shadow-soft hover:shadow-soft-lg transform hover:-translate-y-0.5 transition-all duration-200">
                Join
              </button>
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>

