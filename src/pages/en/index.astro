---
import Layout from '../../layouts/Layout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

const aboutURL = getRelativeLocaleUrl('en', 'about');
const playURL = getRelativeLocaleUrl('en', 'play');
---

<Layout title="Pregunta - Quiz Game" description="A modern and interactive quiz game">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Welcome to Pregunta!</h1>
    <div class="flex flex-col items-center gap-4">
      <a href={playURL} class="btn btn-primary">Play Now</a>
      <a href={aboutURL} class="btn btn-secondary">About</a>
    </div>
  </main>
</Layout>
