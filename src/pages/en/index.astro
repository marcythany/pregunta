---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="Pregunta - Trivia Game">
  <!-- Hero Section -->
  <section class="relative h-[500px] w-full bg-gradient-to-br from-slate-800 to-slate-900 dark:from-gray-900 dark:to-gray-950 flex items-center justify-center">
    <div class="text-center space-y-6">
      <h1 class="text-5xl font-bold text-white">Dive into Trivia Fun</h1>
      <p class="text-xl text-gray-300">Test your knowledge and compete with players worldwide</p>
      <button class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
        Play Now
      </button>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Categories</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {[
        { name: 'Beach', image: 'https://picsum.photos/seed/beach/400/300' },
        { name: 'Mountain', image: 'https://picsum.photos/seed/mountain/400/300' },
        { name: 'City', image: 'https://picsum.photos/seed/city/400/300' },
        { name: 'Forest', image: 'https://picsum.photos/seed/forest/400/300' },
        { name: 'Music Festival', image: 'https://picsum.photos/seed/music/400/300' },
        { name: 'Historical Tour', image: 'https://picsum.photos/seed/history/400/300' },
        { name: 'Local Market', image: 'https://picsum.photos/seed/market/400/300' },
        { name: 'Lake', image: 'https://picsum.photos/seed/lake/400/300' }
      ].map((category) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition cursor-pointer">
          <img 
            src={category.image} 
            alt={category.name}
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <div class="p-4">
            <h3 class="font-semibold text-lg text-gray-900 dark:text-white">{category.name}</h3>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Top Players Section -->
  <section class="py-16 px-4 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Top 10 Players</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Left Column -->
      <div class="space-y-4">
        {[
          { name: 'Alex J.', username: '@starplayer', score: 9500, avatar: 'https://picsum.photos/seed/alex/64/64' },
          { name: 'Jamie L.', username: '@gamerpro', score: 9400, avatar: 'https://picsum.photos/seed/jamie/64/64' },
          { name: 'Sam T.', username: '@highscore', score: 9300, avatar: 'https://picsum.photos/seed/sam/64/64' },
          { name: 'Chris M.', username: '@champion', score: 9200, avatar: 'https://picsum.photos/seed/chris/64/64' },
          { name: 'Pat K.', username: '@triviaking', score: 9100, avatar: 'https://picsum.photos/seed/pat/64/64' },
        ].map((player, index) => (
          <div class="flex items-center justify-between bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
            <div class="flex items-center space-x-4">
              <span class="text-xl font-bold text-gray-500 dark:text-gray-400">#{index + 1}</span>
              <img 
                src={player.avatar} 
                alt={`${player.name}'s avatar`}
                class="w-12 h-12 rounded-full"
                loading="lazy"
              />
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{player.name}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{player.username}</p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900 dark:text-white">{player.score}</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">Best Score</p>
            </div>
          </div>
        ))}
      </div>
      <!-- Right Column -->
      <div class="space-y-4">
        {[
          { name: 'Jordan B.', username: '@quizmaster', score: 9000, avatar: 'https://picsum.photos/seed/jordan/64/64' },
          { name: 'Taylor R.', username: '@brainiac', score: 8900, avatar: 'https://picsum.photos/seed/taylor/64/64' },
          { name: 'Morgan P.', username: '@triviaace', score: 8800, avatar: 'https://picsum.photos/seed/morgan/64/64' },
          { name: 'Casey D.', username: '@quizwhiz', score: 8700, avatar: 'https://picsum.photos/seed/casey/64/64' },
          { name: 'Riley F.', username: '@mastermind', score: 8600, avatar: 'https://picsum.photos/seed/riley/64/64' },
        ].map((player, index) => (
          <div class="flex items-center justify-between bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
            <div class="flex items-center space-x-4">
              <span class="text-xl font-bold text-gray-500 dark:text-gray-400">#{index + 6}</span>
              <img 
                src={player.avatar} 
                alt={`${player.name}'s avatar`}
                class="w-12 h-12 rounded-full"
                loading="lazy"
              />
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{player.name}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{player.username}</p>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900 dark:text-white">{player.score}</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">Best Score</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
